{
  "name": "@aicacia/ecs",
  "version": "0.1.0",
  "description": "an entity component system",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/aicacia/libs/ts-ecs.git"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "ts-node node_modules/.bin/tape src/**/*.test.{ts,tsx} | tap-spec",
    "coverage": "nyc --reporter=lcov --require ts-node/register tape src/**/*.test.{ts,tsx} | tap-spec; nyc report ---reporter=text",
    "clean": "rm -rf ./lib",
    "lint": "eslint . --fix",
    "doc": "typedoc --tsconfig tsconfig.json",
    "prettier": "prettier --ignore-path ./.eslintignore --ignore-unknown --write .",
    "preCommit": "npm run prettier && npm run lint && npm run coverage && npm run prepublishOnly",
    "benchmark": "parcel serve examples/benchmark/index.html",
    "simple": "parcel serve examples/simple/index.html",
    "eventloop": "parcel serve examples/eventloop/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run preCommit"
    }
  },
  "keywords": [
    "entity",
    "component",
    "system"
  ],
  "author": "Nathan Faucett",
  "license": "(MIT OR Apache-2.0)",
  "readmeFilename": "README.md",
  "devDependencies": {
    "@aicacia/rand": "0",
    "@parcel/transformer-image": "next",
    "@types/raf": "3",
    "@types/tape": "4",
    "@types/uuid": "8",
    "@typescript-eslint/eslint-plugin": "4",
    "@typescript-eslint/parser": "4",
    "eslint": "7",
    "eslint-config-prettier": "8",
    "eslint-plugin-prettier": "3",
    "husky": "4",
    "nyc": "15",
    "parcel": "next",
    "prettier": "2",
    "tap-nyc": "1",
    "tap-spec": "5",
    "tape": "5",
    "ts-node": "9",
    "tslib": "2",
    "typedoc": "0",
    "typescript": "4"
  },
  "dependencies": {
    "@aicacia/core": "0",
    "@aicacia/json": "0",
    "@aicacia/pool": "0",
    "gl-matrix": "3",
    "raf": "3",
    "uuid": "3"
  },
  "peerDependencies": {
    "tslib": "2"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "src/**/*.test.*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ]
  }
}
